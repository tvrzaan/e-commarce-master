    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.3",
        "monolog/monolog": "^2.0",
        "phpmailer/phpmailer": "^6.5",
        "stripe/stripe-php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
